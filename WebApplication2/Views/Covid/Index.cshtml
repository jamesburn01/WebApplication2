@model IEnumerable<WebApplication2.Models.covid>

@{
    ViewBag.Title = "Index";
}

<head>
    <script type="text/javascript" src="/scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/scripts/moment.min.js"></script>
    <script type="text/javascript" src="/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/scripts/bootstrap-datetimepicker.js"></script>
    <link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />
</head>
<h2 class=" navbar-form">Covid Data </h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class='col-sm-3'>
                <label class="" disabled>Date Format mm/dd/yyyy</label>
                <input type='text' class="form-control" id='datetimepicker3' />
            </div>
            <div class='col-sm-3'>
                <label class="" disabled>Number of Countries</label>
                <input type='text' class="form-control" id='maxresult' />
            </div>
            <div class='col-sm-3'>
                <div class="mt-4"></div>
                <button id="submit" type="submit" class="form-control btn-success" style="margin-top: 25px;" onclick="myFunction();">Submit</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">


    function myFunction() {
        var observationdate = $('#datetimepicker3').val();
        var max = $('#maxresult').val();
        console.log('click');
        console.log(max);
        console.log(observationdate);
        window.location.href = "/CovidData?observation=" + observationdate + "&maxresult=" + max;
    };


</script>
